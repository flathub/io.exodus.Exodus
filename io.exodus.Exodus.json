{
    "app-id": "io.exodus.Exodus",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "24.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "exodus",
    "separate-locales": false,
    "tags": [
        "proprietary"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "exodus",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 io.exodus.Exodus.desktop /app/share/applications/io.exodus.Exodus.desktop",
                "install -Dm644 io.exodus.Exodus.appdata.xml /app/share/appdata/io.exodus.Exodus.appdata.xml",
                "install -Dm644 -t /app/share/icons/hicolor/scalable/apps icons/io.exodus.Exodus.svg",
                "install -Dm644 -t /app/share/icons/hicolor/512x512/apps icons/png/512x512/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/256x256/apps icons/png/256x256/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/128x128/apps icons/png/128x128/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/64x64/apps icons/png/64x64/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/48x48/apps icons/png/48x48/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/32x32/apps icons/png/32x32/io.exodus.Exodus.png",
                "install -Dm644 -t /app/share/icons/hicolor/16x16/apps icons/png/16x16/io.exodus.Exodus.png",
                "install -D apply_extra /app/bin/apply_extra",
                "install -D exodus /app/bin/exodus"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "unzip exodus.zip > /dev/null",
                        "mv Exodus-linux-x64/* .",
                        "rm -r Exodus-linux-x64 *.zip"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "exodus",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec zypak-wrapper /app/extra/Exodus \"$@\""
                    ]
                },
                {
                    "type": "extra-data",
                    "url": "https://downloads.exodus.com/releases/exodus-linux-x64-25.28.4.zip",
                    "sha256": "006785b0c1d2cb00b7da2688188f7f558d980b7811e5b1eedf7ace5899721453",
                    "size": 222273462,
                    "filename": "exodus.zip",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.exodus.com/releases/",
                        "version-pattern": "https://downloads.exodus.com/releases/hashes-exodus-([\\d\\.-]+).txt",
                        "url-template": "https://downloads.exodus.com/releases/exodus-linux-x64-$version.zip",
                        "is-main-source": true
                    }
                },
                {
                    "type": "dir",
                    "path": "icons"
                },
                {
                    "type": "file",
                    "path": "io.exodus.Exodus.desktop"
                },
                {
                    "type": "file",
                    "path": "io.exodus.Exodus.appdata.xml"
                }
            ]
        }
    ]
}
